          <div class="col-sm-6 mb-3">
            <%= link_to ("母乳" + tag.br + last_time(0)).html_safe, new_log_path(type: 0), class: "fw-bold btn w-100 orign-d-flex log-#{btn_class_changer}btn btn-#{btn_class_changer}warning" %>
