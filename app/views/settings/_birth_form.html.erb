<%= form_with(url: birth_setting_path, model: setting, local: true) do |form| %>
  <% if setting.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id %>

  <div class="mb-3">
    <%= form.label :birth_day, "お誕生日または出産予定日", class: "form-label" %>
    <%= form.date_field :birth_day, class: "form-control", value: Date.current %>
  </div>

  <div class="mb-3 actions d-grid gap-2">
    <%= form.submit '登録', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>